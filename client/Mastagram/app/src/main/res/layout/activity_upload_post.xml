<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:weightSum="1"
        tools:context=".UploadPostActivity">

    <android.support.v7.widget.Toolbar
            app:title="Upload posts!"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:gravity="center"
            android:layout_gravity="center"
    />

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/paintViewLayout"
            android:layout_width="match_parent"
            android:background="@drawable/line_top_bottom"
            android:layout_height="0dp"
            android:layout_weight="0.8">
        <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/uploading_image"
        />

    </LinearLayout>
    <LinearLayout
            android:id="@+id/altLayout"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:layout_editor_absoluteX="0dp">

        <TextView
                android:id="@+id/alt1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="1"
                android:text="Tag1"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner"/>

        <TextView
                android:id="@+id/alt2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="2"
                android:text="Tag2"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner"/>

        <TextView
                android:id="@+id/alt3"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:tag="3"
                android:text="Tag3"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner"/>



    </LinearLayout>

    <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:orientation="horizontal"
    >
        <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Write Contents"
                android:textAppearance="?android:textAppearanceMedium"
                android:clickable="false"
                android:cursorVisible="true"
                android:backgroundTint="@android:color/darker_gray"
                android:layout_weight="0.5"/>


    </LinearLayout>

    <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button android:id="@+id/buttonClear" android:textColor="@android:color/white" android:textSize="16sp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:background="@drawable/rounded_corner_submit" android:text="UPLOAD"/>
    </LinearLayout>
</LinearLayout>